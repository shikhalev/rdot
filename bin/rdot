#!/usr/bin/ruby
# encoding: utf-8

require 'rdot'

options = {}

require 'optparse'

def hi str
  if $stdout.stat.chardev?
    "\e[1m#{str}\e[0m"
  else
    str
  end
end

title = <<-TXT
#{hi("RDot v#{RDot::VERSION}:")} GraphViz class diagrams for Ruby
    http://github.com/shikhalev/rdot
TXT

usage = <<-TXT
#{hi('Usage:')} rdot [options] <files>

#{hi('Options:')}
TXT

opts = OptionParser.new(usage) do |o|

  o.on '-h', '--help', 'Show short help.' do
    puts title
    puts
    puts opts.to_s
    exit 0
  end

end

args = opts.parse ARGV
